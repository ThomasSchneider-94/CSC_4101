{% extends 'base.html.twig' %}
{% block body %}
      <h1>ALBUM</h1>

         {% dump album %}

      <table class="table">
          <tbody>
              <tr>
                  <th>Id</th>
                  <td>{{ album.id }}</td>
              </tr>
              <tr>
                  <th>Nom</th>
                  <td>{{ album.nom }}</td>
              </tr>
              <tr>
                  <th>Propriétaire</th>
                  <td>{{ album.member }}</td>
              </tr>        
              {% for generique in album.generiques %}
	              <tr>
	                  <th> {{ loop.first ? "Liste des génériques" : "" }} </th>
	                  <td><li><a href="{{ path('generique_show', {'id': generique.id}) }}">{{ generique }}</a></li></td>
	              </tr>
              {% endfor %} {# album #}
              <tr>
                  <th></th>
                  <td><a href="{{ path('generique_new', {'id': album.id}) }}">Créer un nouveau générique</a></td>
              </tr>
          </tbody>
      </table>

      <a href="{{ path('member_show', {'id': album.member.id}) }}">Retour au profil utilisateur</a>

{% endblock %} {# body #}